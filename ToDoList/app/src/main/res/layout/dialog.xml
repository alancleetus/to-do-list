<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/TaskInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:ems="10"
        android:hint="Task"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#c1c1c1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/TypeInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#565555"
        android:ems="10"
        android:hint="Type of task"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#c1c1c1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TaskInput"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/cancelDialogButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cross"
        android:backgroundTint="@color/colorPrimary"
        android:padding="10dp"
        app:layout_constraintRight_toLeftOf="@+id/NewTaskButton"
        tools:layout_constraintRight_creator="1"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TypeInput"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/NewTaskButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/tick"
        android:backgroundTint="@color/lime"
        android:padding="10dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TypeInput"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>